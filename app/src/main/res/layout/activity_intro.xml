<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="30dp">

    <TextView
        android:id="@+id/intro_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ§ "
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/intro_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synesthesia AI"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_icon" />

    <TextView
        android:id="@+id/intro_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Real-time sensory regulation powered by Edge AI."
        android:textColor="#B0B0B0"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_title" />

    <LinearLayout
        android:id="@+id/dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        
        <View android:id="@+id/dot1" android:layout_width="10dp" android:layout_height="10dp" android:background="@android:color/white" android:layout_margin="5dp"/>
        <View android:id="@+id/dot2" android:layout_width="10dp" android:layout_height="10dp" android:background="@android:color/darker_gray" android:layout_margin="5dp"/>
        <View android:id="@+id/dot3" android:layout_width="10dp" android:layout_height="10dp" android:background="@android:color/darker_gray" android:layout_margin="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NEXT"
        android:textSize="18sp"
        android:backgroundTint="#00D2FF"
        android:textColor="#000000"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>